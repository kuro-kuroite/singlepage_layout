.about
  background-color #fff
  color #333
  padding 80px 30px

& .heading
  display inline-block
  font-size 4rem
  letter-spacing 1px
  margin 30px 0 15px
  padding-bottom 15px
  position relative

  &::before,
  &::after
    border 1px solid
    content ''
    display inline-block
    height 12px
    margin 0 20px
    transform rotate(45deg)
    vertical-align middle
    width 12px

  &::before
    bottom 5px

.about-text
  line-height 2.5
  margin 30px

@media (max-width 768px)
  .heading
    font-size 2.5rem

  body
    font-size 1.3rem

  .about-text
    line-height 1.8

  .heading
    &::before,
    &::after
      height 8px
      width 8px
