.about
  background-color #fff
  color #333
  padding 80px 30px

  & .heading
    display inline-block
    font-size 4rem
    letter-spacing 1px
    margin 30px 0 15px
    padding-bottom 15px
    position relative

    &::before,
    &::after
      border-bottom 1px solid #999
      bottom 0
      content ''
      left 0
      position absolute
      right 0

    &::before
      bottom 5px

.about-text
  line-height 2.5
  margin 30px
