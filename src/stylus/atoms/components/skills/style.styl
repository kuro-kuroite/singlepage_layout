.skills
  background-color #fff
  color #333
  padding 80px 0

.skills-wrapper
  display flex
  flex-wrap wrap
  justify-content center
  margin 50px auto 0

.skill-icon
  border 4px solid
  border-radius 50%
  color #f1b400
  font-size 8rem
  height 150px
  line-height 150px - (4px * 2)
  margin-bottom 30px
  width 150px

.skill-title
  font-size 2rem
  margin 0 20px 20px

.skill-text
  line-height 2
  margin 0 20px
