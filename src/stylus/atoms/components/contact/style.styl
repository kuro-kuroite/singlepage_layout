.contact
  padding 80px 0 150px

.contact-form
  margin 50px auto 0
  width 50%

  & input[type=text],
  & textarea
    background-color rgba(255, 255, 255, 0.05)
    border 1px solid rgba(255, 255, 255, 0.4)
    border-radius 0
    color #fff
    display block
    margin-bottom 10px
    outline none
    padding 15px
    width 100%

  & :placeholder-shown,
  & ::-webkit-input-placeholder
    color rgba(255, 255, 255, 0.6)
    opacity 1

  & input[type=text]:focus,
  & textarea:focus
    box-shadow 0 0 8px rgba(255, 255, 255, 0.5) inset


  & textarea
    height 150px

  & input[type=submit]
    background-color transparent
    border 1px solid rgba(255, 255, 255, 0.4)
    border-radius 5px
    color rgba(255, 255, 255, 0.6)
    cursor pointer
    display block
    margin 40px auto 0
    padding 15px
    width 200px

    &:hover
      background-color rgba(255, 255, 255, 0.05)

@media (max-width 768px)
  .contact-form
    width 80%

  .contact
    padding-bottom 80px
